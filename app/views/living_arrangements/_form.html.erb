<%= form_for([@gardener, @living_arrangement]) do |g| %>
<div class="panel panel-default">

<%= render "shared/error_messages", :target => @living_arrangement %>

  <div class="btn-group btn-group-justified">
       <div class="field">
      <h4> 1.) Relationship of respondent to HH</h4> <br/>
     <%= g.text_field :relationship_to_hh %> 
     </div>

     <div class="field">
       <h4> 2.) How many people live in your household? </h4> <br/>
      <%= g.text_field :number_of_people_in_household %>
  </div>
  <div class="field">
  <h4> 2.1) How many people that live in your household are over 18? </h4> <br/>
      <%= g.number_field :number_of_people_in_household_adults %>
  </div>
  <div class="field">
  <h4> 2.2) How many people that live in your household are under 18? </h4> <br/>
      <%= g.number_field :number_of_people_in_household_children %>
  </div>
  <div class="field">
  <h4> 3.) Type of hosing space. High density = slum Low density = Backyard </h4> <br/>
       <%= g.radio_button :housing_type, :high_density %> 
       <%= g.label :type_high_density, "High Density" %> <br/>
        

     <%= g.radio_button :housing_type, :low_density %> 
     <%= g.label :type_low_density, "Low density" %> <br/>

      <%= g.radio_button :housing_type, :flat %> 
     <%= g.label :type_flat, "Flat" %> <br/>
     </div>
  
   <div class="field">
      <h4> 4.) Constituency location of housing space </h4> <br/>
      <%= g.text_field :location %>
      </div>


  <div class="form-actions">
      <%= g.submit 'continue', :class =>  'btn btn-lg btn-success' %>
  </div>

</div>
<% end %>

